generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(User)
  isActive  Boolean  @default(false)
}

enum Role {
  User
  Admin
}

model CodeBlue {
  id         String   @id @default(cuid())
  activeBy   String
  createdAt  DateTime
  location   String
  team       String
  operator   Operator @relation(fields: [operatorId], references: [id])
  operatorId String
}

model CodeGreen {
  id         String   @id @default(cuid())
  activeBy   String
  createdAt  DateTime
  location   String
  event      String
  operator   Operator @relation(fields: [operatorId], references: [id])
  operatorId String
  police     Boolean
}

model Operator {
  id        String      @id @default(cuid())
  name      String
  CodeGreen CodeGreen[]
  CodeBlue  CodeBlue[]
}
